{
  "name": "orchion-tools",
  "displayName": "Orchion Tools",
  "description": "Developer tools for managing Orchion clusters, nodes, and AI agents directly from VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "orchion.openChat",
        "title": "Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "orchion.promptAgent",
        "title": "Prompt Agent"
      },
      {
        "command": "orchion.refreshNodes",
        "title": "Refresh Nodes"
      },
      {
        "command": "orchion.refreshAgents",
        "title": "Refresh Agents"
      },
      {
        "command": "orchion.clearLogs",
        "title": "Clear Logs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "orchion",
          "title": "Orchion",
          "icon": "$(server)"
        }
      ]
    },
    "views": {
      "orchion": [
        {
          "id": "orchionCluster",
          "name": "Cluster",
          "when": "true"
        },
        {
          "id": "orchionAgents",
          "name": "Agents",
          "when": "true"
        },
        {
          "id": "orchionLogs",
          "name": "Logs",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Orchion",
      "properties": {
        "orchion.orchestratorUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "URL of the Orchion orchestrator API"
        },
        "orchion.defaultModel": {
          "type": "string",
          "default": "llama3.2",
          "description": "Default model to use for chat completions"
        },
        "orchion.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval for tree views (milliseconds)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && npm run format:check && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && npm run format:check && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
